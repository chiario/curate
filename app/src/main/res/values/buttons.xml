<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Curate.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/colorAccent_80</item>
    </style>

    <style name="Curate.Button.Gray">
        <item name="android:backgroundTint">@color/white_40</item>
    </style>

    <style name="Curate.Button.Small">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Curate.Button.Medium.Submit">
        <item name="android:background">@drawable/bg_button_submit</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minWidth">@null</item>
    </style>

    <style name="Curate.Button.Medium">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minWidth">@null</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Curate.ImageButton" parent="android:Widget.ImageButton">
        <item name="android:tint">@color/white</item>
    </style>
</resources>