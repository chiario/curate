<resources>
    <!-- Base application theme. -->
    <style name="Curate" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/mediumGray</item>
        <item name="colorPrimaryDark">@color/darkGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/darkGray</item>
        <item name="android:textViewStyle">@style/Curate.TextView</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="editTextStyle">@style/Curate.EditText</item>
        <item name="searchViewStyle">@style/Curate.SearchView</item>
        <item name="actionOverflowMenuStyle">@style/Curate.MenuPopup</item>
        <item name="buttonStyle">@style/Curate.Button</item>
    </style>

    <style name="Curate.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:thumbTint">@color/white</item>
    </style>

    <style name="Curate.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionBarItemBackground">@color/transparent</item>
        <item name="android:searchViewStyle">@style/Curate.SearchView</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="popupTheme">@style/Curate.MenuPopup</item>
    </style>

    <style name="Curate.MenuPopup" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:padding">0dip</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:background">@color/mediumGray</item>
    </style>

    <style name="Curate.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="queryBackground">@color/transparent</item>
        <item name="background">@color/transparent</item>
        <item name="queryHint">Search for a song!</item>
        <item name="layout">@layout/searchview</item>
    </style>

    <style name="Curate.ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background">@null</item>
    </style>


    <!-- TODO: Figure these out -->
    <style name="Dialog.Rounded" parent="Theme.AppCompat.Dialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/zxing_transparent</item>
        <item name="android:background">@drawable/dialog_background</item>
    </style>
    <style name="Dialog.Fullscreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/mediumGray</item>
        <item name="android:background">@color/darkGray</item>
    </style>
</resources>
