<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <!--<item name="android:imageButtonStyle">@style/AppTheme.ImageButton</item>-->
    </style>

    <style name="AppTheme.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@android:color/black</item>
        <item name="android:progressTint">@android:color/white</item>
        <item name="android:thumbTint">@android:color/white</item>
    </style>

    <style name = "AppTheme.TextView" parent = "android:Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.TextView.Primary" parent="AppTheme.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextView.Secondary" parent="AppTheme.TextView">
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name = "AppTheme.ImageButton" parent = "android:Widget.ImageButton">
        <item name="android:tint">@color/offwhite</item>
    </style>

    <style name="AppTheme.SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:colorAccent">@color/colorText</item>
        <item name="android:textColorHighlight">@color/colorTextHint</item>
    </style>

    <style name="AppTheme.SearchbarBackground">
        <item name="android:background">@drawable/searchbar_background</item>
        <item name="android:backgroundTint">@color/white_20</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="AppTheme.ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_join</item>
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">@null</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="AppTheme.Button.Highlighted">
        <item name="android:backgroundTint">@color/colorAccent_80</item>
    </style>

    <style name = "AppTheme.ImageButton.SongItem">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name = "AppTheme.SongItemContainer">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.AlbumImageItem">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
