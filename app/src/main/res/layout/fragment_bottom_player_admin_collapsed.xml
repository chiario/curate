<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clCurrPlaying"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_10"
    android:elevation="10dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <!-- Current Track -->

    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_album_placeholder" />

    <TextView
        android:id="@+id/tvArtist"
        style="@style/AppTheme.TextView.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:alpha="0.8"
        android:text="Some Artist"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toStartOf="@+id/play_pause_button" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/AppTheme.TextView.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Test Song Name"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/play_pause_button"
        app:layout_constraintStart_toEndOf="@+id/ibExpandCollapse"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibExpandCollapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float" />


    <!-- Playback controls -->

    <SeekBar
        android:id="@+id/seek_to"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:progress="50"
        android:progressTint="@color/colorAccent"
        android:thumbTint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivAlbum"
        app:layout_constraintTop_toBottomOf="@id/tvArtist" />

    <ImageView
        android:id="@+id/skip_prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/actionBarItemBackground"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/play_pause_button"
        app:layout_constraintStart_toStartOf="@+id/play_pause_button"
        app:layout_constraintTop_toTopOf="@+id/play_pause_button"
        app:srcCompat="@drawable/btn_prev" />

    <ImageView
        android:id="@+id/play_pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:srcCompat="@drawable/btn_play" />

    <ImageView
        android:id="@+id/skip_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/actionBarItemBackground"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/play_pause_button"
        app:layout_constraintStart_toStartOf="@+id/play_pause_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_next" />
</androidx.constraintlayout.widget.ConstraintLayout>