<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogPartyInfoAdmin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mediumGray"
    android:backgroundTint="@color/darkGray"
    android:minWidth="260dp"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvName"
        style="@style/Curate.TextView.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Nameless Party"
        android:padding="0dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Edit name here" />

    <TextView
        android:id="@+id/tvJoinCode"
        style="@style/Curate.TextView.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="Join Code: yeet"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvUserCountText"
        style="@style/Curate.TextView.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="10 people partying"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJoinCode" />

    <ImageView
        android:id="@+id/ivQR"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:minWidth="200dp"
        android:minHeight="200dp"
        android:padding="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserCountText"
        app:srcCompat="@color/white_80" />

    <Button
        android:id="@+id/btnDelete"
        style="@style/Curate.Button.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Delete Party"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivQR"
        app:layout_constraintStart_toStartOf="@+id/ivQR"
        app:layout_constraintTop_toBottomOf="@+id/ivQR" />


</androidx.constraintlayout.widget.ConstraintLayout>